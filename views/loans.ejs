    <div class="fixed-bottom">
      <div class="container mb-5">
        <div class="row">
          <div class="col text-center">
            <a href="/home" class="text-dark">
              <i class="bi bi-house-door" style="font-size: 24px"></i>
              <div>Home</div>
            </a>
          </div>
          <div class="col text-center">
            <a href="/fund_transfer" class="text-dark">
              <i class="bi bi-arrow-right-circle" style="font-size: 24px"></i>
              <div>Transfer</div>
            </a>
          </div>
          <div class="col text-center">
            <a href="/loans" class="btn btn-md btn-outline-dark text-dark">
              <i class="bi bi-cash" style="font-size: 24px"></i>
              <div>Loans</div>
            </a>
          </div>
          <div class="col text-center">
            <a href="/portfolio" class="text-dark">
              <i class="bi bi-briefcase" style="font-size: 24px"></i>
              <div>Portfolio</div>
            </a>
          </div>
        </div>
      </div>
    </div>

